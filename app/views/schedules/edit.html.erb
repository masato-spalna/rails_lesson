<h2>スケジュール編集</h2>

<%= form_for @schedule do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_at ,"開始日" %></th>
            <td><%= f.date_field :start_at %></td>
        </tr>
        <tr>
            <th><%= f.label :start_at ,"開始時間" %></th>
            <td><%= f.time_field :start_at %></td>
        </tr>
        <tr>
            <th><%= f.label :end_at ,"終了日" %></th>
            <td><%= f.date_field :end_at %></td>
        </tr>
        <tr>
            <th><%= f.label :end_at ,"終了時間" %></th>
            <td><%= f.time_field :end_at %></td>
        </tr>
        <tr>
            <th><%= f.label :all_day ,"終日" %></th>
            <td><%= f.check_box :all_day %> 
            <br>終日の場合はチェックを入れてください </td>
        </tr>
        <tr>
            <th><%= f.label :memo,"スケジュールメモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "編集を完了する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
        </ul>
    </div>
<% end %>